@model IEnumerable<HospedagemMVC.Domain.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Clientes</h2>

<p>
    @Html.ActionLink("Novo", "Create")
    <hr />
</p>

<p>
    @using (Html.BeginForm("GetCustomerByName", "Customer"))
    {
        <div class="row" align="center">
            <section class="col-md-3"></section>
            <section class="col-md-6">
                <h4>Pesquisar Cliente por Nome</h4>
            </section>
            <section class="col-md-3"></section>
        </div>

        <div class="row" align="center">
            <section class="col-md-2"></section>
            <section class="col-md-4">
                <div class="form-group">
                    Nome Cliente: @Html.TextBox("name") <br /> <br />
                </div>
            </section>
            <section class="col-md-4">
                <input type="submit" value="Buscar" class="btn btn-primary btn-block" />
            </section>
            <section class="col-md-2"></section>
        </div>
    }
    <hr />
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
