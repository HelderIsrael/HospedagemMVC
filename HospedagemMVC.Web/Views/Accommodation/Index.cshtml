@model IEnumerable<HospedagemMVC.Domain.Accommodation>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Hospedagens</h2>

<p>
    @Html.ActionLink("Novo", "Create")
    <hr/>
</p>

<p>
    @using (Html.BeginForm("GetAccommodationsByDate", "Accommodation"))
    {
        <div class="row" align="center">
            <section class="col-md-3"></section>
            <section class="col-md-6">
                <h4>Filtrar por Dias</h4>
            </section>
            <section class="col-md-3"></section>
        </div>

    <div class="row" align="center">
            <section class="col-md-2"></section>
            <section class="col-md-4">
                <div class="form-group">
                    Data Inicial: @Html.TextBox("beginDate") <br /> <br/>
                    Data Final: @Html.TextBox("endDate")
                </div>
            </section>
            <section class="col-md-4">
                <input type="submit" value="Filtrar" class="btn btn-primary btn-block" />
            </section>
            <section class="col-md-2"></section>
        </div>
    }
    <hr/>
</p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateChekIn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCheckOut)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.AmountPeopleAdult)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmountPeopleChild)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.AmountChalets)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.ValueAdult)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValueChild)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.ValueTotal)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Obs)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateChekIn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCheckOut)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.AmountPeopleAdult)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AmountPeopleChild)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.AmountChalets)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.ValueAdult)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValueChild)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.ValueTotal)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Obs)
        </td>*@
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
